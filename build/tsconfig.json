{
  "include": [
    "../lib/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "checkJs": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
